public class Timersubmit {

    
    void TS() {
        Timer time = new Timer();
        TimerTask task = new TimerTask() {

            @Override
            public void run() {
                int count = 20;
                // TODO Auto-generated method stub
                while(count > 0){
                    if (count > 0) {
                        System.out.println("HERE YOUR EXAMINATION STARTED");
                        System.out.println("YOU HAVE TO SOLVE TOTAL 2 QUESTION ");
                        System.out.println("YOU HAVE TOTAL 10 SEC FOR EACH QUESTION GET READY");
                        
                    }
    
                }

               

            }

        };

        time.schedule(task, 20000);

    }

    public static void main(String[] args) {
        loginpage lp = new loginpage();
        lp.login();
        Timersubmit tm = new Timersubmit();
        tm.TS();
    }

}



